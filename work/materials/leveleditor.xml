<!DOCTYPE materials>

<!-- 
	Feature strings:
	
	Static						0
	Skinned						1
	Spot (light)				2	NOTE: used by Nebula internally
	Point (light)				3	NOTE: used by Nebula internally
	Global (light)  			4	NOTE: used by Nebula internally
	Alpha						5
	Tessellated					6
	Environment					7
	AlphaTest					8
	Colored						9
	Unlit						10
	Lightmapped					11
	Instanced					12
	
	These four feature strings are used for materials which have no intuitive way of mapping their names to the previously declared strings
	Alt0						13
	Alt1						14
	Alt2						15
	Alt3						16
	Alt4						17
	
	Empty						18
	
	MAX IS 32
	
-->
<Nebula3>
	<Materials>

		<Material name="PlacementHandleWireframeNoPick" type="special" desc="Inhouse material used by level editor to render handles">
			<Pass batch="DirectToColor" shader="leveleditor" variation="Alt0"/>
	   
			<Param name="MatDiffuse" type="float4" defaultValue="0,0,0,0"/>
		</Material>
		<Material name="PlacementHandleSolidNoPick" type="special" desc="Inhouse material used by level editor to render handles">
			<Pass batch="DirectToColor" shader="leveleditor" variation="Alt0|Alt2"/>
	   
			<Param name="MatDiffuse" type="float4" defaultValue="0,0,0,0"/>
		</Material>
		<Material name="PlacementHandleWireframe" type="special" desc="Inhouse material used by level editor to render handles">
			<Pass batch="DirectToColor" shader="leveleditor" variation="Alt0"/>
			<Pass batch="PickingInFront" shader="leveleditor" variation="Alt1"/>
	   
			<Param name="MatDiffuse" type="float4" defaultValue="0,0,0,0"/>
		
			<!-- use object id for picking -->
			<Param name="ObjectId" type="int" system="true"/>
		</Material>
		<Material name="PlacementHandleSolid" type="special" desc="Inhouse material used by level editor to render handles">
			<Pass batch="DirectToColor" shader="leveleditor" variation="Alt0|Alt2"/>
			<Pass batch="PickingInFront" shader="leveleditor" variation="Alt1|Alt2"/>
	   
			<Param name="MatDiffuse" type="float4" defaultValue="0,0,0,0"/>
		
			<!-- use object id for picking -->
			<Param name="ObjectId" type="int" system="true"/>
		</Material>
	</Materials>
</Nebula3>
